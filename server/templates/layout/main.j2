<!DOCTYPE html>
<html lang="ja">
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
    <meta charset="utf-8">
    <title>{{ title }} - {{ subtitle }}</title>

    {% if js_url %}
      <link rel="preload" href="{{ js_url }}" as="script">
    {% else %}
      <link rel="preload" href="/assets/js/desktop.js?{{ time }}" as="script">
    {% endif %}

    {% if css_url %}
      <link rel="stylesheet" href="{{ css_url }}">
    {% else %}
      <link rel="stylesheet" href="/assets/css/desktop.css?{{ time }}">
    {% endif %}
    <style> [v-cloak] { display: none } </style>

    <meta name="description" content="{{ description }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="fb:app_id" content="1668136526839121">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ title }}">
    <meta property="og:title" content="{{ title }} - {{ subtitle }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="{{ base_url }}">
    <meta property="og:image" content="{{ base_url }}/assets/img/ogp_summary.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <link rel="canonical" href="{{ base_url }}{{ path }}">
  </head>
  <body data-app-id="j1g3xUDxVmwWCCKqibVQCZOHNpvnSMBY">
    {% block body %}
      <div class="v-cloak eg-app"></div>

      {% if js_url %}
        <script src="{{ js_url }}"></script>
      {% else %}
        <script src="/assets/js/desktop.js?{{ time }}"></script>
      {% endif %}
    {% endblock %}
  </body>
</html>
